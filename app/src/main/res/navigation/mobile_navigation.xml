<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.silaris.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_setting2"
            app:destination="@id/navigation_setting" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_notification"
            app:destination="@id/navigation_notification" />
    </fragment>
    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.example.silaris.ui.TrolliFragment"
        android:label="fragment_trolli"
        tools:layout="@layout/fragment_trolli" />
    <fragment
        android:id="@+id/navigation_notification"
        android:name="com.example.silaris.ui.NotifFragment"
        android:label="fragment_notif"
        tools:layout="@layout/fragment_notif" />
</navigation>